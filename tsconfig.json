{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "composite": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "types": [
      "node"
    ]
  },
  "include": [
    "./src",
    "./onlysubs-solidity/**/*"
  ],
  "compileOnSave": true
}

